{
	"vendor": {
		"david-fong.github.io/okiidoku/notes": [
			"https://cmake.org/cmake/help/latest/manual/cmake-presets.7.html",
			"put personal/local preset configs in a CMakeUserPresets.json file."
		]
	},
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 22
	},
	"configurePresets": [
		{
			"name": "base:any",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_CXX_STANDARD": "20",
				"CMAKE_CXX_STANDARD_REQUIRED": true,
				"CMAKE_CXX_EXTENSIONS": false,
				"CMAKE_EXPORT_COMPILE_COMMANDS": true,
				"CMAKE_COLOR_DIAGNOSTICS": true
			}
		},
		{
			"name": "base:user",
			"hidden": true,
			"inherits": ["base:any"],
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/build",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "base:dev",
			"hidden": true,
			"inherits": ["base:any"],
			"generator": "Ninja Multi-Config",
			"binaryDir": "${sourceDir}/out/build/${presetName}",
			"installDir": "${sourceDir}/out/install/${presetName}",
			"cacheVariables": {
				"CPM_SOURCE_CACHE": "${sourceDir}/external/.cpm",
				"OKIIDOKU_BUILD_BINDINGS_FOR_PYTHON": true
			},
			"warnings": {
				"dev": true
			}
		},
		{
			"name": "tool:clang-14",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang-14",
				"CMAKE_CXX_COMPILER": "clang++-14"
			}
		},
		{
			"name": "tool:gcc-11",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "gcc-11",
				"CMAKE_CXX_COMPILER": "g++-11"
			}
		},
		{
			"name": "tool:vs:x64",
			"hidden": true,
			"condition": {"type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows"},
			"generator": "Visual Studio 17 2022",
			"toolset": "host=x64",
			"architecture": "x64",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "cl.exe",
				"CMAKE_CXX_COMPILER": "cl.exe"
			}
		},
		{
			"name": "tool:emscripten",
			"hidden": true,
			"description": "available if you set/export EMSDK environment variable. good for IDEs which are hard to configure to use `emcmake cmake`.",
			"condition": {"type": "notEquals", "lhs": "$env{EMSDK}", "rhs": ""},
			"toolchainFile": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
			"cacheVariables": {
				"CMAKE_CROSSCOMPILING_EMULATOR": "node;--experimental-wasm-threads",
				"OKIIDOKU_BUILD_BINDINGS_FOR_PYTHON": null
			}
		},
		{
			"name": "dev.clang",
			"inherits": ["tool:clang-14", "base:dev"]
		},
		{
			"name": "dev.gcc",
			"inherits": ["tool:gcc-11", "base:dev"]
		},
		{
			"name": "dev.msvc",
			"inherits": ["tool:vs:x64", "base:dev"]
		},
		{
			"name": "dev.emscripten",
			"inherits": ["tool:emscripten", "base:dev"]
		}
	],
	"buildPresets": [
		{
			"name": "base:dev",
			"hidden": true,
			"targets": ["all", "okiidoku_cli"]
		},
		{
			"name": "dev.clang.debug",
			"configurePreset": "dev.clang",
			"displayName": "debug",
			"inherits": ["base:dev"],
			"configuration": "Debug"
		},
		{
			"name": "dev.clang.release",
			"configurePreset": "dev.clang",
			"displayName": "release",
			"inherits": ["base:dev"],
			"configuration": "Release"
		},
		{
			"name": "dev.gcc.debug",
			"configurePreset": "dev.gcc",
			"displayName": "debug",
			"inherits": ["base:dev"],
			"configuration": "Debug"
		},
		{
			"name": "dev.gcc.release",
			"configurePreset": "dev.gcc",
			"displayName": "release",
			"inherits": ["base:dev"],
			"configuration": "Release"
		},
		{
			"name": "dev.msvc.debug",
			"configurePreset": "dev.msvc",
			"displayName": "debug",
			"inherits": ["base:dev"],
			"configuration": "Debug"
		},
		{
			"name": "dev.msvc.release",
			"configurePreset": "dev.msvc",
			"displayName": "release",
			"inherits": ["base:dev"],
			"configuration": "Release"
		},
		{
			"name": "dev.emscripten.debug",
			"configurePreset": "dev.emscripten",
			"displayName": "debug",
			"inherits": ["base:dev"],
			"configuration": "Debug"
		},
		{
			"name": "dev.emscripten.release",
			"configurePreset": "dev.emscripten",
			"displayName": "release",
			"inherits": ["base:dev"],
			"configuration": "Release"
		}
	],
	"testPresets": [
		{
			"name": "base:dev",
			"hidden": true,
			"description": "recommended for developing okiidoku",
			"execution": {},
			"output": {}
		}
	]
}