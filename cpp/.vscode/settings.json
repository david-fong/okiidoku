{
	// https://code.visualstudio.com/docs/cpp/faq-cpp

	"C_Cpp.intelliSenseCacheSize": 0,

	"C_Cpp.default.cStandard": "c17",
	"C_Cpp.default.cppStandard": "c++20",
	"C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
	"C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,

	// https://vector-of-bool.github.io/docs/vscode-cmake-tools/settings.html

	// fallback settings if dev opts out of using CMake presets.
	"cmake.configureArgs": ["-Wdev"],
	"cmake.configureSettings": {
		"CMAKE_COLOR_DIAGNOSTICS": "ON",
		// "CMAKE_COMPILE_WARNING_AS_ERROR": false
	},
	// TODO.wait https://github.com/microsoft/vscode-cmake-tools/issues/2426
	// TODO.try will the ${buildKitVendor} part have conflicts with MSVC for mingw-64 or cygwin?
	"cmake.buildDirectory": "${workspaceFolder}/out/build/${buildKitVendor}_${buildKitVersionMajor}",
	"cmake.installPrefix": "${workspaceFolder}/out/build/${buildKitVendor}_${buildKitVersionMajor}",

	"cmake.debugConfig": {
		"environment": [],
		// "cwd": "",
		"args": [],
		"setupCommands": [],
		"stopAtEntry": true,
		// "visualizerFile": "${workspaceFolder}/tools/okiidoku.natvis", // TODO.try is this needed if already specified in CMake?
	},

	"[cmake]": {
	},

	"files.exclude": {
		"external/": true,
		"out/": true,
		"build/": true,
		"extras/bindings/emscripten/external/": true,
		"extras/bindings/emscripten/out/": true,
		"extras/bindings/emscripten/build/": true,
	},
}