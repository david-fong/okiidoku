{
	// https://code.visualstudio.com/docs/cpp/faq-cpp

	"C_Cpp.intelliSenseCacheSize": 0,

	// "C_Cpp.default.cStandard": "c17",
	// "C_Cpp.default.cppStandard": "c++20",
	"C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
	"C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,

	// https://vector-of-bool.github.io/docs/vscode-cmake-tools/settings.html
	// TODO.try will this have conflicts for mingw-64?
	// TODO.low is there way to exclude the buildType part for multiconfig generators?
	"cmake.buildDirectory": "${workspaceFolder}/build/${buildKitVendor}/${buildType}",
	"cmake.configureOnOpen": true,

	"files.exclude": {
		"build/": true,
	},

	"cSpell.enabledLanguageIds": [
		"c",
		"cpp",
		"json",
		"markdown",
		"plaintext",
		"python",
		"text",
		"yaml",
		"yml"
	],
	"cSpell.dictionaries": [
		"cpp"
	],
}