{
	"vendor": {
		"david-fong.github.io/okiidoku/notes": [
			"https://cmake.org/cmake/help/latest/manual/cmake-presets.7.html",
			"put personal/local preset configs in a CMakeUserPresets.json file."
		]
	},
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 21
	},
	"configurePresets": [
		{
			"name": "base:any",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_CXX_STANDARD": "20",
				"CMAKE_CXX_STANDARD_REQUIRED": true,
				"CMAKE_CXX_EXTENSIONS": false,
				"CMAKE_EXPORT_COMPILE_COMMANDS": true,
				"CMAKE_COLOR_DIAGNOSTICS": true
			}
		},
		{
			"name": "base:dev",
			"hidden": true,
			"inherits": ["base:any"],
			"generator": "Ninja Multi-Config",
			"binaryDir": "${sourceDir}/out/build/${presetName}",
			"installDir": "${sourceDir}/out/install/${presetName}",
			"cacheVariables": {
				"CPM_SOURCE_CACHE": "${sourceDir}/../../../external/.cpm"
			},
			"warnings": {
				"dev": true
			}
		},
		{
			"name": "toolchain",
			"hidden": true,
			"toolchainFile": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
			"cacheVariables": {
				"CMAKE_CROSSCOMPILING_EMULATOR": "node;--experimental-wasm-threads"
			}
		},
		{
			"name": "dev",
			"inherits": ["base:dev", "toolchain"]
		}
	],
	"buildPresets": [
		{
			"name": "dev.debug",
			"configurePreset": "dev",
			"displayName": "debug",
			"configuration": "Debug"
		},
		{
			"name": "dev.release",
			"configurePreset": "dev",
			"displayName": "release",
			"configuration": "Release"
		}
	]
}