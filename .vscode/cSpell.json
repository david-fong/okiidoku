{
	"name": "okiidoku cSpell config",
	"description": "",
	"language": "en-GB",
	"enabledLanguageIds": [
		"c",
		"css",
		"cpp",
		"html",
		"markdown",
		"plaintext",
		"python",
		"text",
		"typescript",
		"javascript",
		"json",
		"jsonc"
	],
	"enableFiletypes": [
		// "cpp"
	],
	"languageSettings": [
		{
			"languageId": "cpp",
			"dictionaries": ["!cpp", "cpp-refined"]
		}
	],
	// "useGitignore": true,
	"dictionaries": [
		"okiidoku-sudoku",
		"okiidoku-cpp",
		"okiidoku-misc"
	],
	"readonly": true,
	"dictionaryDefinitions": [
		{
			"name": "okiidoku-sudoku",
			"path": "./.cspell/sudoku.txt",
			"addWords": true
		},
		{
			"name": "okiidoku-cpp",
			"path": "./.cspell/cpp.txt",
			"addWords": true
		},
		{
			"name": "okiidoku-misc",
			"path": "./.cspell/misc.txt",
			"addWords": true
		}
	]
}
