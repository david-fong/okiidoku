{
	"cSpell.language": "en-GB",
	"files.trimTrailingWhitespace": true,

	"files.exclude": {
		// note: paths are relative to ${workspaceFolder} by default.
		"cpp/external/*/*": true,
		"cpp/out/": true,
		"cpp/build*/": true,
		"cpp/install*/": true,
		"cpp/extras/emscripten/examples/node/build/": true,

		"**/node_modules": true,
		"**/pnpm-lock.yaml*": true,
		"web/dist": true,
	},
	"search.followSymlinks": false,
	"search.exclude": {
		"**/node_modules/": true,
		"/cpp/external/": true,
		"/cpp/out/": true,
		"/cpp/build*/": true,
		"/cpp/install*/": true,
		"/LICENSES": true,
		"/LICENSE.txt": true,
		"/writings/**/*trace*.json": true,
	},
	"files.readonlyInclude": {
		"/usr/include/**": true,
		"**/node_modules/**": true,
		"cpp/external/**": true,
		"cpp/out/": true,
		"cpp/build*/": true,
		"cpp/install*/": true,
		"LICENSES/**": true,
		"LICENSE.txt": true,
	},

	"[json][xml][cpp][cmake][rust][python][typescript][javascript][html][css]": {
		"editor.insertSpaces": false,
	},
	"[bat]": {
		"files.eol": "\r\n", // also reflected in .gitattributes
	},
	"files.associations": {
		".clang-tidy": "yaml",
		"*.natvis": "xml",
		"*.cmake.in": "cmake-documentation",
		"**/cmake/**/compile_opts/**": "makefile",
	},

	"todo-tree.filtering.useBuiltInExcludes": "file excludes",
	"todo-tree.general.statusBar": "total",
	"todo-tree.general.tags": [
		"TODO.asap",
		"TODO.high",
		"TODO.mid",
		"TODO.low",
		"TODO.try",
		"TODO.wait",
		"TODO",
	],

	// https://code.visualstudio.com/docs/cpp/faq-cpp
	"C_Cpp.default.cStandard": "c17",
	"C_Cpp.default.cppStandard": "c++23",
	"C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
	// "C_Cpp.default.compileCommands": [
	// 	"${workspaceFolder}/cpp/out/build/dev.clang/compile_commands.json",
	// 	"${workspaceFolder}/cpp/out/build/dev.gcc/compile_commands.json",
	// 	// "${command:cmake.buildDirectory}/compile_commands.json",
	// ],
	"C_Cpp.default.defines": [],
	"C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
	// "C_Cpp.default.browse.path": ["${workspaceFolder}"],
	"C_Cpp.default.browse.path": [],
	"C_Cpp.autoAddFileAssociations": false,
	"C_Cpp.commentContinuationPatterns": [
		{ "begin": "/\\*\\*", "continue": "" },
	],

	// https://vector-of-bool.github.io/docs/vscode-cmake-tools/settings.html

	"cmake.useCMakePresets": "always",
	"cmake.ignoreCMakeListsMissing": true,
	"cmake.sourceDirectory": ["${workspaceFolder}/cpp"],
	// the following line is only needed when using kits, but this project uses presets.
	"cmake.buildDirectory": "${sourceDirectory}/out/build/${command:cmake.activeConfigurePresetName}",
	"cmake.installPrefix": "${sourceDirectory}/out/install/${command:cmake.activeBuildPresetName}", // doesn't work (?) :(
	"cmake.debugConfig": {
		"environment": [],
		"args": [],
		"setupCommands": [
			{"text": "add-auto-load-safe-path ${workspaceFolder}/cpp/tools", "ignoreFailures": true,},
			{"text": "add-auto-load-safe-path ${command:cmake.getLaunchTargetDirectory}/..", "ignoreFailures": true,},
			// ^trying to do the above in one line would mean working with OS-specific list separators ":"/";".
			{"text": "directory ${workspaceFolder}/cpp", "ignoreFailures": true,}, // add to source search path. allows loading :/cpp/tools/okiidoku-gdb.py.
			{"text": "set print pretty on", "ignoreFailures": true,},
			{"text": "set print array on", "ignoreFailures": true,}, // pretty-print arrays
			{	// https://sourceware.org/gdb/current/onlinedocs/gdb.html/GDB_002fMI-Variable-Objects.html#:~:text=The%20%2Denable%2Dpretty%2Dprinting%20Command
				"description": "allow python-based visualizers to affect the output of the MI variable object commands",
				"text": "-enable-pretty-printing",
				"ignoreFailures": true,
			},
			{"text": "set print static-members off", "ignoreFailures": true,},
		],
		"stopAtEntry": true,
		// "visualizerFile": "${workspaceFolder}/tools/okiidoku.natvis", // TODO.try is this needed if already specified in CMake?
		// "showDisplayString": true, // https://code.visualstudio.com/docs/cpp/launch-json-reference#_showdisplaystring
		"sourceFileMap": { // https://code.visualstudio.com/docs/cpp/launch-json-reference#_sourcefilemap
			"/okiidoku": "${workspaceFolder}/cpp" // since `-ffile-prefix-map=${okiidoku_SOURCE_DIR}=/okiidoku`
		},
		"cwd": "${command:cmake.getLaunchTargetDirectory}/.." // see OKIIDOKU_TEST_WORKING_DIRECTORY. sets gdb pwd. "inferior" (debuggee) program inherits.
	},
	"cmake.configureArgs": [
		// "--warn-uninitialized",
		"-D OKIIDOKU_BUILD_WITH_STATIC_ANALYZERS:BOOL=NO",
	],

	"python.analysis.typeCheckingMode": "standard",
	"python.analysis.autoSearchPaths": false,
}
